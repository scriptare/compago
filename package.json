{
  "name": "compago",
  "version": "5.0.0-beta.24",
  "description": "A minimalist MVC framework for modern browsers.",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "mvc",
    "framework",
    "client-side",
    "frontend"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "doc": "typedoc --out doc src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zandaqo/compago.git"
  },
  "homepage": "https://github.com/zandaqo/compago#readme",
  "bugs": {
    "url": "https://github.com/zandaqo/compago/issues"
  },
  "author": "Maga D. Zandaqo <denelxan@gmail.com> (http://maga.name)",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lit-html|lit-element))"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "allowJs": true
        }
      }
    },
    "testMatch": [
      "**/test/**/*.spec.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**",
      "!**/node_modules/**",
      "!**/__snapshots__/**",
      "!**/__fixtures__/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.36",
    "typescript": "^4.1.3"
  }
}
