{
  "name": "compago",
  "version": "4.0.0-beta.19",
  "description": "A minimalist MVC framework for modern browsers.",
  "main": "index.js",
  "module": "index.js",
  "browser": "index.js",
  "keywords": [
    "mvc",
    "framework",
    "client-side",
    "frontend"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/*.js test/*.js",
    "coverage:report": "cat ./coverage/lcov.info | codecov",
    "doc:api": "jsdoc2md --configure jsdoc.json > doc/API.md"
  },
  "directories": {
    "lib": "lib",
    "doc": "doc",
    "test": "test"
  },
  "files": [
    "lib/*.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zandaqo/compago.git"
  },
  "homepage": "https://github.com/zandaqo/compago#readme",
  "bugs": {
    "url": "https://github.com/zandaqo/compago/issues"
  },
  "author": "Maga D. Zandaqo <denelxan@gmail.com> (http://maga.name)",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/lib/**",
      "!**/lib/listener.js",
      "!**/lib/is-equal.js",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 100,
        "lines": 100,
        "statements": 95
      }
    },
    "roots": [
      "<rootDir>/test"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "babel-jest": "^25.3.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.3.0",
    "jsdoc-plugin-false-booleans": "^1.0.0",
    "jsdoc-plugin-named-defaults": "^1.1.1",
    "jsdoc-to-markdown": "^5.0.3"
  }
}
