{
  "name": "compago",
  "version": "3.0.0-beta.1",
  "description": "A minimalist MVC framework for modern browsers.",
  "browser": "src/index.js",
  "module": "src/index.js",
  "keywords": [
    "mvc",
    "framework",
    "client-side",
    "frontend"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint src/*.js tests/*.js",
    "coverage:report": "cat ./coverage/lcov.info | codecov",
    "docs:api": "jsdoc2md --configure jsdoc.json > docs/API.md",
    "docs:install": "gitbook install",
    "docs:build": "npm run docs:api && gitbook build",
    "docs:serve": "npm run docs:api && gitbook serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zandaqo/compago.git"
  },
  "homepage": "https://github.com/zandaqo/compago#readme",
  "bugs": {
    "url": "https://github.com/zandaqo/compago/issues"
  },
  "author": "Maga D. Zandaqo <denelxan@gmail.com> (http://maga.name)",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov"
    ],
    "roots": [
      "<rootDir>/tests"
    ]
  },
  "dependencies": {
    "fast-deep-equal": "^1.0.0",
    "path-to-regexp": "^2.1.0"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "codecov.io": "^0.1.6",
    "dmd-plugin-gitbook": "0.0.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "gitbook-cli": "^2.3.2",
    "jest": "^21.2.1",
    "jsdoc-plugin-false-booleans": "^1.0.0",
    "jsdoc-plugin-named-defaults": "^1.1.1",
    "jsdoc-to-markdown": "^3.0.0"
  }
}
