{
  "name": "compago",
  "version": "5.0.0-beta.14",
  "description": "A minimalist MVC framework for modern browsers.",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "mvc",
    "framework",
    "client-side",
    "frontend"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/*.js test/*.js",
    "coverage:report": "cat ./coverage/lcov.info | codecov",
    "doc:api": "jsdoc2md lib/*.js > doc/API.md"
  },
  "directories": {
    "lib": "lib",
    "doc": "doc",
    "test": "test"
  },
  "files": [
    "lib/*.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zandaqo/compago.git"
  },
  "homepage": "https://github.com/zandaqo/compago#readme",
  "bugs": {
    "url": "https://github.com/zandaqo/compago/issues"
  },
  "author": "Maga D. Zandaqo <denelxan@gmail.com> (http://maga.name)",
  "license": "MIT",
  "jest": {
    "transform": {},
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "lit-element": "<rootDir>/test/lit-element-mock.js",
      "lit-html": "<rootDir>/test/lit-html-mock.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/lib/**",
      "!**/lib/is-equal.js",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "roots": [
      "<rootDir>/test"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "globals": {
      "globalThis": true
    },
    "rules": {
      "no-underscore-dangle": 1,
      "no-nested-ternary": 1,
      "no-bitwise": 1,
      "no-continue": 1,
      "no-prototype-builtins": 1,
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "valid-jsdoc": [
        2,
        {
          "prefer": {
            "return": "returns"
          },
          "requireReturnDescription": false,
          "requireParamDescription": false
        }
      ],
      "import/extensions": 0
    }
  },
  "devDependencies": {
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.1.0",
    "jsdoc-to-markdown": "^6.0.1"
  }
}
