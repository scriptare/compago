{
  "name": "compago",
  "version": "2.1.0",
  "description": "A minimalist MVC framework for modern browsers.",
  "browser": "src/index.js",
  "module": "src/index.js",
  "keywords": [
    "mvc",
    "framework",
    "client-side",
    "frontend"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint src/index.js tests/unit.test.js",
    "coverage:report": "cat ./coverage/lcov.info | codecov",
    "docs:api": "jsdoc2md --configure jsdoc.json > docs/API.md",
    "docs:install": "gitbook install",
    "docs:build": "npm run docs:api && gitbook build",
    "docs:serve": "npm run docs:api && gitbook serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scriptare/compago.git"
  },
  "homepage": "https://github.com/scriptare/compago#readme",
  "bugs": {
    "url": "https://github.com/scriptare/compago/issues"
  },
  "author": "Maga D. Zandaqo <denelxan@gmail.com> (http://maga.name)",
  "license": "MIT",
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-underscore-dangle": 0,
      "no-nested-ternary": 1,
      "no-plusplus": 0,
      "no-bitwise": 1,
      "no-continue": 1,
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "eqeqeq": [
        2,
        "smart"
      ],
      "valid-jsdoc": [
        2,
        {
          "prefer": {
            "return": "returns"
          },
          "requireReturnDescription": false,
          "requireParamDescription": false
        }
      ]
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "node6"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov"
    ],
    "roots": [
      "<rootDir>/tests"
    ]
  },
  "dependencies": {
    "clone": "^2.1.1",
    "deep-equal": "^1.0.1",
    "path-to-regexp": "^1.7.0",
    "querystring": "^0.2.0"
  },
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "babel-preset-node6": "^11.0.0",
    "codecov.io": "^0.1.6",
    "dmd-plugin-gitbook": "0.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "gitbook-cli": "^2.3.0",
    "istanbul": "^1.1.0-alpha.1",
    "jest": "^19.0.2",
    "jsdoc-plugin-false-booleans": "^1.0.0",
    "jsdoc-plugin-named-defaults": "^1.1.1",
    "jsdoc-to-markdown": "^3.0.0"
  }
}
